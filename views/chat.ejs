<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat with <%= otherUsername %></title>
    <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
    <div id="inAppNotification" style="display:none;position:fixed;top:0;left:0;width:100vw;z-index:9999;background:#4fc3f7;color:#fff;text-align:center;padding:1em 0;font-size:1.1em;box-shadow:0 2px 8px rgba(0,0,0,0.08);transition:top 0.3s;">
        <span id="inAppNotificationMsg"></span>
    </div>
    <div class="container">
        <div class="header">
            <a href="/users" class="back-button">
                ‚Üê
            </a>
            <div class="profile-badge">
                <%= otherUserProfile.username[0].toUpperCase() %>
                <span class="status-dot" id="statusDot"></span>
            </div>
            <div class="user-info">
                <div class="username"><%= otherUserProfile.username %></div>
                <div class="user-status" id="userStatus">Offline</div>
            </div>
            <div class="header-actions">
                <button class="header-btn" id="searchBtn" title="Search">üîç</button>
                <button class="header-btn" id="themeBtn" title="Toggle Theme">üåô</button>
                    <div class="dropdown" style="position:relative;display:inline-block;">
                        <button class="header-btn" id="moreBtn" title="More">‚ãÆ</button>
                        <div id="moreDropdown" class="dropdown-content" style="display:none;position:absolute;right:0;top:2.2em;background:#fff;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.15);min-width:150px;z-index:10;">
                            <button id="clearChatBtn" style="width:100%;padding:0.7em 1em;border:none;background:none;text-align:left;cursor:pointer;">üßπ Clear Chat</button>
                            <button id="removeFriendBtn" style="width:100%;padding:0.7em 1em;border:none;background:none;text-align:left;cursor:pointer;color:#e74c3c;">‚ùå Remove Friend</button>
                        </div>
                    </div>
            </div>
        </div>

        <div class="search-bar" id="searchBar">
            <input type="text" id="chatSearch" placeholder="Search messages...">
        </div>

        <div class="image-viewer" id="imageViewer">
            <button class="viewer-close" id="viewerClose">&times;</button>
            <div class="viewer-content"><img src="" class="viewer-image" id="viewerImage"></div>
        </div>

        <div id="chat-messages">
            <div class="date-separator">
                <span class="date-badge" id="todayBadge">Today</span>
            </div>
        </div>

        <div class="typing-indicator" id="typingIndicator">
            <div class="typing-dots">
                <span class="typing-dot"></span>
                <span class="typing-dot"></span>
                <span class="typing-dot"></span>
            </div>
        </div>

        <div class="input-container">
            <div id="input-row">
                <div class="input-actions">
                    <input type="file" id="fileInput" accept="image/*,video/*,.pdf,.doc,.docx">
                    <button class="input-btn" id="fileBtn" title="Attach File">üìé</button>
                    <button class="input-btn" id="emojiBtn" title="Emoji">üòä</button>
                </div>
                <div class="input-wrapper">
                    <textarea 
                        id="message-input" 
                        placeholder="Type a message..."
                        rows="1"
                    ></textarea>
                    <div class="emoji-picker" id="emojiPicker">
                        <div class="emoji-grid" id="emojiGrid"></div>
                    </div>
                </div>
                <button id="send-button" title="Send">
                    ‚û§
                </button>
            </div>
        </div>
    </div>

        <script src="/socket.io/socket.io.js"></script>
        <script>
            window.me = "<%= me %>";
            window.other = "<%= otherUsername %>";
        </script>
            <script src="/js/chat.js"></script>
            <script>
            // Dropdown logic for More button
            const moreBtn = document.getElementById('moreBtn');
            const moreDropdown = document.getElementById('moreDropdown');
            moreBtn.onclick = function(e) {
                e.stopPropagation();
                moreDropdown.style.display = (moreDropdown.style.display === 'block') ? 'none' : 'block';
            };
            document.addEventListener('click', function(e) {
                if (!moreDropdown.contains(e.target) && e.target !== moreBtn) {
                    moreDropdown.style.display = 'none';
                }
            });
            // Clear Chat logic
            document.getElementById('clearChatBtn').onclick = async function() {
                if (confirm('Are you sure you want to clear this chat?')) {
                    const res = await fetch('/api/chat/clear', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ user2: window.other })
                    });
                    if (res.ok) {
                        location.reload();
                    } else {
                        alert('Failed to clear chat');
                    }
                }
            };
            // Remove Friend logic
            document.getElementById('removeFriendBtn').onclick = async function() {
                if (confirm('Are you sure you want to remove this friend?')) {
                    const res = await fetch('/api/remove-friend', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ friend: window.other })
                    });
                    if (res.ok) {
                        window.location.href = '/users';
                    } else {
                        alert('Failed to remove friend');
                    }
                }
            };
            </script>
</body>
</html>
