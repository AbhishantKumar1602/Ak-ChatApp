<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - Ak Chats</title>
    <link rel="stylesheet" href="/css/users.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header-content">
                <div class="app-icon">💬</div>
                <h2>Ak Chats</h2>
            </div>
            <div class="header-actions">
                <button class="header-btn" title="Logout" onclick="logout()">🚪</button>
            </div>
        </div>
        <div class="search-container">
            <div class="search-wrapper">
                <span class="search-icon">🔍</span>
                <input 
                    type="text" 
                    id="searchInput" 
                    placeholder="Search conversations..."
                    autocomplete="off"
                >
            </div>
        </div>
        <div class="user-list-container">
            <div class="loading show">
                <div class="spinner"></div>
                <p>Loading conversations...</p>
            </div>
            <ul id="user-list"></ul>
            <div class="empty-state" id="emptyState">
                <div class="empty-icon">💬</div>
                <div class="empty-text">No conversations found</div>
                <div class="empty-subtext">Start a new chat to get started</div>
            </div>
        </div>
    </div>
    <script>
    // Make username available globally for logout and users.js
    window.me = '<%= typeof me !== "undefined" ? me : "" %>';
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/users.js"></script>
    <script>
    // Override logout to call backend
    function logout() {
        var username = window.me;
        var msg = `Hi ${username},\nAre you sure you want to logout?`;
        if (confirm(msg)) {
            fetch('/api/logout', { method: 'POST' })
                .then(() => window.location.href = '/login');
        }
    }
    </script>
</body>
</html>
